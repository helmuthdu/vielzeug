{
  "name": "vielzeug",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "root": true,
  "packageManager": "pnpm@10.17.1",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "setup": "pnpm install",
    "build": "pnpm run -r build",
    "fix": "biome check --write --unsafe packages/**/src",
    "lint": "biome check packages/**/src",
    "prepublishOnly": "npm run -r build",
    "test": "vitest",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "fake-indexeddb": "^6.2.2",
    "jsdom": "^27.0.0",
    "lodash": "^4.17.21",
    "mitata": "^1.0.34",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4"
  }
}
